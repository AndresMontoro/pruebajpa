<persistenece xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="pruebajpa">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>es.ca.andresmontoro.Persona</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/personas"></property>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
    </properties>
  </persistence-unit>
</persistenece>